<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivitybaru">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="338dp"
        android:scaleType="fitXY"
        android:src="@drawable/logoutm" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/univ"
        android:textColor="@color/black"
        android:layout_marginTop="23dp"
        android:layout_marginStart="18dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="@string/profile"
        android:layout_marginLeft="18dp"
        android:layout_marginVertical="55dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/logoutm"
        android:layout_marginVertical="161dp"
        android:layout_marginStart="142dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/univ"
        android:textColor="@color/black"
        android:layout_marginVertical="400dp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

    <TextView
        android:id="@+id/txt_title_profilesingkat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Profile Singkat"
        android:textColor="@color/black"
        android:layout_marginVertical="470dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

    <TextView
        android:id="@+id/txt_profilesingkat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="500dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="@string/profile_singkat"
        android:layout_marginRight="18dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>