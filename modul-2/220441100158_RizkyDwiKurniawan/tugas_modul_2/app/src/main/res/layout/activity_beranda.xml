<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BerandaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/judul_logo"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:adjustViewBounds="true"
                android:src="@drawable/utm_logo_2" />
            <TextView
                android:id="@+id/judul_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Universitas Trunojoyo"
                android:textColor="@color/black"
                android:textSize="18sp" />



        </LinearLayout>

        <TextView
            android:id="@+id/judul_halamanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"
            android:text="Beranda"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sub_judul_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Aktivitas Kegiatan"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/bagian_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bagian_1_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/gambar_1" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/bagian_1_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/gambar_2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bagian_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bagian_2_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/gambar_1" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/bagian_2_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/gambar_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/sub_judul_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Artikel"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/artikel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_artikel_1"
                android:layout_width="wrap_content"
                android:layout_height="116dp"
                android:src="@drawable/gambar_3"/>

            <LinearLayout
                android:id="@+id/value_artikel_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:layout_marginStart="13dp">

                <TextView
                    android:id="@+id/judul_artikel_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Terlalu Jago, Trunojoyo Juara Lagi"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/isi_artikel_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="11sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/artikel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_artikel_2"
                android:layout_width="wrap_content"
                android:layout_height="116dp"
                android:src="@drawable/gambar_3"/>

            <LinearLayout
                android:id="@+id/value_artikel_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:layout_marginStart="13dp">

                <TextView
                    android:id="@+id/judul_artikel_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Terlalu Jago, Trunojoyo Juara Lagi"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/isi_artikel_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="11sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/artikel_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_artikel_3"
                android:layout_width="wrap_content"
                android:layout_height="116dp"
                android:src="@drawable/gambar_3"/>

            <LinearLayout
                android:id="@+id/value_artikel_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:layout_marginStart="13dp">

                <TextView
                    android:id="@+id/judul_artikel_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Terlalu Jago, Trunojoyo Juara Lagi"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/isi_artikel_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="11sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>